&НаКлиенте
Процедура ДГА_СогласованнаяСкидкаПриИзмененииПосле()   
	//<<---Дьяков Г.А.---23.05.2023--- Рассчтитать скидку при изменении поля 	
	Массив_ТЧ = ДГА_ВернутьМассивТЧ();
	
	Если Массив_ТЧ.Количество() > 0 Тогда
		
		Оповещение = Новый ОписаниеОповещения("ПослеЗакрытияВопроса",
		ЭтотОбъект, Массив_ТЧ);	
		
		ПоказатьВопрос(Оповещение,
		"Пересчитать сумму с учетом назначенной скидки?",
		РежимДиалогаВопрос.ДаНет,
		0, // таймаут в секундах
		КодВозвратаДиалога.Да, // (необ.) кнопка по умолчанию
		"Применение скидки" // (необ.) заголовок 
		); 
		
	КонецЕсли;  
КонецПроцедуры

