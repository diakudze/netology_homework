&НаКлиенте
Функция ДГА_ВернутьМассивТЧ()    
	
	//<<---Дьяков Г.А.---23.05.2023--- Вернуть массив ТЧ
	Перем Массив_ТЧ;
	
	Массив_ТЧ = Новый Массив;
	Массив_ТЧ.Добавить(Объект.Товары);
	Массив_ТЧ.Добавить(Объект.Услуги);
	Возврат Массив_ТЧ;
	
КонецФункции


 
&НаКлиенте
Процедура ДГА_РассчитатьСуммуСтроки(Строка_ТЧ)
	
	//<<---Дьяков Г.А.---23.05.2023--- Рассчитать скидку для строки ТЧ 
	ТекущиеДанные = Строка_ТЧ;
	ТекущиеДанные.Сумма = ((ТекущиеДанные.Цена - ТекущиеДанные.Цена * Объект.ДГА_СогласованнаяСкидка/100) * ТекущиеДанные.Количество);
	
	РассчитатьСуммуДокумента();
	
КонецПроцедуры


